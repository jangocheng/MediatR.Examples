{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "EnvironmentPrefix": {
      "type": "string",
      "defaultValue": "dev"
    },
    "VmIISNameSuffix": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Additional discriminator for IIS machines. Might be set e.g. to feature branch name or PBI id."
      }
    },
    "VmSqlAdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "VmSqlAdminPassword": {
      "type": "securestring"
    },
    "VmIISAdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "VmIISAdminPassword": {
      "type": "securestring"
    },
    "VmElasticsearchAdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "VmElasticsearchAdminPassword": {
      "type": "securestring"
    },
    "VmIISWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ]
    },
    "VmSqlWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ]
    },
    "VmElasticsearchWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ]
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "Auto-generated container in staging storage account to receive post-build staging folder upload"
      }
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "Auto-generated token to access _artifactsLocation"
      }
    },
    "domainToJoin": {
      "type": "string",
      "metadata": {
        "description": "The FQDN of the AD domain"
      }
    },
    "domainUsername": {
      "type": "string",
      "metadata": {
        "description": "Username of the account on the domain"
      }
    },
    "domainPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password of the account on the domain"
      }
    },
    "ouPath": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Specifies an organizational unit (OU) for the domain account. Enter the full distinguished name of the OU in quotation marks. Example: 'OU=testOU; DC=domain; DC=Domain; DC=com"
      }
    },
    "domainJoinOptions": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "Set of bit flags that define the join options. Default value of 3 is a combination of NETSETUP_JOIN_DOMAIN (0x00000001) & NETSETUP_ACCT_CREATE (0x00000002) i.e. will join the domain and create the account on the domain. For more information see https://msdn.microsoft.com/en-us/library/aa392154(v=vs.85).aspx"
      }
    },
    "SqlUserPassword": {
      "type": "securestring"
    },
    "OctopusThumbprint": {
      "type": "securestring"
    },
    "CommonShareUrl": {
      "type": "string"
    },
    "CommonShareUserName": {
      "type": "string"
    },
    "CommonShareKey": {
      "type": "securestring"
    },
    "JavaVersion": {
      "type": "string"
    },
    "JavaFileName": {
      "type": "string"
    },
    "ElasticsearchVersion": {
      "type": "string"
    },
    "ElasticsearchFileName": {
      "type": "string"
    },
    "JdbcFileName": {
      "type": "string"
    },
    "JdbcVersion": {
      "type": "string"
    },
    "ElasticsearchIp": {
      "type": "string"
    },
    "ElasticsearchAdditionalConfigValues": {
      "type": "array"
    },
    "IsoFileName": {
      "type": "string"
    },
    "SqlInstanceName": {
      "type": "string",
      "defaultValue": "MSSQLSERVER"
    },
    "VirtualNetworkSubnetId": {
      "type": "string",
      "metadata": {
        "description": "Id of the virtual network subnet configured to use within given subscription. Easiest way to get it is navigating through resources on https://resources.azure.com"
      }
    },
    "RgStorageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Storage account name from common shared resource group. This is where vm images will be stored."
      }
    }
  },
  "variables": {
    "ResourceGroupNameTokens": "[split(resourceGroup().name, '-')]",
    "ResourceNameSuffix": "[variables('ResourceGroupNameTokens')[sub(length(variables('ResourceGroupNameTokens')), 1)]]",
    "VmIISNameSuffix": "[parameters('VmIISNameSuffix')]",
    "ResourceNamePrefix": "[substring(resourceGroup().name, 3, sub(length(resourceGroup().name), add(3, length(variables('ResourceNameSuffix')))))]",
    "RgStorageAccountName": "[parameters('RgStorageAccountName')]",
    "VmSqlName": "[concat(variables('ResourceNamePrefix'), 'Vm-Sql-', variables('ResourceNameSuffix'))]",
    "VmSqlImagePulisher": "MicrosoftWindowsServer",
    "VmSqlImageOffer": "WindowsServer",
    "VmSqlOSDiskName": "[concat('KnightFrank-Antares-VmSqlOSDisk', variables('ResourceNameSuffix'))]",
    "VmSqlVmSize": "Standard_D1",
    "VmStorageAccountContainerName": "vhds",
    "VmSqlNicName": "[concat(variables('ResourceNamePrefix'), 'Vm-Sql-Nic-', variables('ResourceNameSuffix'))]",
    "VmSqlHostName": "[concat(variables('ResourceGroupNameTokens')[5], 'VmSql', variables('ResourceNameSuffix'))]",
    "VmIISHostName": "[concat(variables('ResourceGroupNameTokens')[5], 'VmIIS', variables('ResourceNameSuffix'))]",
    "VmIISImagePublisher": "MicrosoftWindowsServer",
    "VmIISImageOffer": "WindowsServer",
    "VmIISOSDiskName": "[concat('KnightFrank-Antares-VmIISOSDisk', variables('ResourceNameSuffix'), variables('VmIISNameSuffix'))]",
    "VmIISVmSize": "Standard_D1",
    "VmIISNicName": "[concat(variables('ResourceNamePrefix'), 'Vm-IIS-Nic-', variables('ResourceNameSuffix'), variables('VmIISNameSuffix'))]",
    "VmIISName": "[concat(variables('ResourceNamePrefix'), 'Vm-IIS-', variables('ResourceNameSuffix'), variables('VmIISNameSuffix'))]",
    "SqlUserName": "[concat('KnightFrank.Antares.', toUpper(substring(parameters('EnvironmentPrefix'), 0, 1)), toLower(substring(parameters('EnvironmentPrefix'), 1, sub(length(parameters('EnvironmentPrefix')), 1))), '.User')]",
    "VirtualNetworkSubnetRef": "[parameters('VirtualNetworkSubnetId')]",
    "VmElasticsearchVmSize": "Standard_D1",
    "VmElasticsearchName": "[concat(variables('ResourceNamePrefix'), 'Vm-Elasticsearch-', variables('ResourceNameSuffix'))]",
    "VmElasticsearchNicName": "[concat(variables('ResourceNamePrefix'), 'Vm-Elasticsearch-Nic-', variables('ResourceNameSuffix'))]",
    "VmElasticsearchHostName": "[concat(variables('ResourceGroupNameTokens')[5], 'VmES', variables('ResourceNameSuffix'))]",
    "VmElasticsearchImagePublisher": "MicrosoftWindowsServer",
    "VmElasticsearchImageOffer": "WindowsServer",
    "VmElasticsearchOSDiskName": "[concat('KnightFrank-Antares-VmElasticsearchOSDisk', variables('ResourceNameSuffix'))]"
  },
  "resources": [
    {
      "name": "[variables('VmSqlNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "tags": {
        "displayName": "KnightFrank-Antares-Vm-Sql-Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('VirtualNetworkSubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[variables('VmSqlName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('VmSqlNicName'))]"
      ],
      "tags": {
        "displayName": "KnightFrank-Antares-Vm-Sql"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('VmSqlVmSize')]"
        },
        "osProfile": {
          "computerName": "[variables('VmSqlHostName')]",
          "adminUsername": "[parameters('VmSqlAdminUserName')]",
          "adminPassword": "[parameters('VmSqlAdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('VmSqlImagePulisher')]",
            "offer": "[variables('VmSqlImageOffer')]",
            "sku": "[parameters('VmSqlWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "KnightFrank-Antares-VmOSDisk",
            "vhd": {
              "uri": "[concat('http://', variables('RgStorageAccountName'), '.blob.core.windows.net/', variables('VmStorageAccountContainerName'), '/', variables('VmSqlOSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('VmSqlNicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "KnightFrank-Antares-Vm-Sql-DSC",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-06-15",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', variables('VmSqlName'))]",
            "[concat('Microsoft.Compute/virtualMachines/', variables('VmIISName'), '/extensions/KnightFrank-Antares-Vm-IIS-DSC')]"
          ],
          "tags": {
            "displayName": "KnightFrank-Antares-Vm-Sql-DSC"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.15",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "wmfVersion": "5.0",
              "configuration": {
                "url": "[concat(parameters('_artifactsLocation'), '/', 'dsc.zip')]",
                "script": "KnightFrank-Antares-Vm-Sql-DSCConfiguration.ps1",
                "function": "SetupSQLVm"
              },
              "configurationArguments": {
                "commonShareUrl": "[parameters('CommonShareUrl')]",
                "isoFileName": "[parameters('IsoFileName')]",
                "sqlInstanceName": "[parameters('SqlInstanceName')]"
              }
            },
            "protectedSettings": {
              "configurationUrlSasToken": "[parameters('_artifactsLocationSasToken')]",
              "configurationArguments": {
                "setupCredential": {
                  "UserName": "[parameters('VmSqlAdminUserName')]",
                  "Password": "[parameters('VmSqlAdminPassword')]"
                },
                "sqlLoginCredential": {
                  "UserName": "[variables('SqlUserName')]",
                  "Password": "[parameters('VmSqlAdminPassword')]"
                },
                "commonShareCredential": {
                  "UserName": "[parameters('CommonShareUserName')]",
                  "Password": "[parameters('CommonShareKey')]"
                },
                "octopusThumbprint": "[parameters('OctopusThumbprint')]"
              }
            }
          }
        },  
        {
          "apiVersion": "2015-06-15",
          "type": "Microsoft.Compute/virtualMachines/extensions",
          "name": "[concat(variables('VmSqlName'),'/joindomain')]",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', variables('VmSqlName'))]",
            "[concat('Microsoft.Compute/virtualMachines/', variables('VmSqlName'), '/extensions/KnightFrank-Antares-Vm-Sql-DSC')]"
          ],
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "JsonADDomainExtension",
            "typeHandlerVersion": "1.0",
            "settings": {
              "Name": "[parameters('domainToJoin')]",
              "OUPath": "[parameters('ouPath')]",
              "User": "[concat(parameters('domainToJoin'), '\\', parameters('domainUsername'))]",
              "Restart": "true",
              "Options": "[parameters('domainJoinOptions')]"
            },
            "protectedsettings": {
              "Password": "[parameters('domainPassword')]"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('VmIISNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "tags": {
        "displayName": "KnightFrank-Antares-Vm-IIS-Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('VirtualNetworkSubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[variables('VmIISName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('VmIISNicName'))]"
      ],
      "tags": {
        "displayName": "KnightFrank-Antares-Vm-IIS"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('VmIISVmSize')]"
        },
        "osProfile": {
          "computerName": "[variables('VmIISHostName')]",
          "adminUsername": "[parameters('VmIISAdminUsername')]",
          "adminPassword": "[parameters('VmIISAdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('VmIISImagePublisher')]",
            "offer": "[variables('VmIISImageOffer')]",
            "sku": "[parameters('VmIISWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "VmIISOSDisk",
            "vhd": {
              "uri": "[concat('http://', variables('RgStorageAccountName'), '.blob.core.windows.net/', variables('VmStorageAccountContainerName'), '/', variables('VmIISOSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('VmIISNicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "KnightFrank-Antares-Vm-IIS-DSC",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-06-15",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', variables('VmIISName'))]"
          ],
          "tags": {
            "displayName": "KnightFrank-Antares-Vm-IIS-DSC"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.15",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "configuration": {
                "url": "[concat(parameters('_artifactsLocation'), '/', 'dsc.zip')]",
                "script": "KnightFrank-Antares-Vm-IIS-DSCConfiguration.ps1",
                "function": "SetupIISVm"
              },
              "configurationArguments": {
                "environmentPrefix": "[parameters('EnvironmentPrefix')]"
              }
            },
            "protectedSettings": {
              "configurationUrlSasToken": "[parameters('_artifactsLocationSasToken')]",
              "configurationArguments": {
                "octopusThumbprint": "[parameters('OctopusThumbprint')]"
              }
            }
          }
        }
      ]
    },
    {
      "name": "[variables('VmElasticsearchNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "tags": {
        "displayName": "KnightFrank-Antares-Vm-Elasticsearch-Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('VirtualNetworkSubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[variables('VmElasticsearchName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('VmElasticsearchNicName'))]"
      ],
      "tags": {
        "displayName": "KnightFrank-Antares-Vm-Elasticsearch"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('VmElasticsearchVmSize')]"
        },
        "osProfile": {
          "computerName": "[variables('VmElasticsearchHostName')]",
          "adminUsername": "[parameters('VmElasticsearchAdminUsername')]",
          "adminPassword": "[parameters('VmElasticsearchAdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('VmElasticsearchImagePublisher')]",
            "offer": "[variables('VmElasticsearchImageOffer')]",
            "sku": "[parameters('VmElasticsearchWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "VmElasticsearchOSDisk",
            "vhd": {
              "uri": "[concat('http://', variables('RgStorageAccountName'), '.blob.core.windows.net/', variables('VmStorageAccountContainerName'), '/', variables('VmElasticsearchOSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('VmElasticsearchNicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "KnightFrank-Antares-Vm-Elasticsearch-DSC",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-06-15",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', variables('VmElasticsearchName'))]"
          ],
          "tags": {
            "displayName": "KnightFrank-Antares-Vm-Elasticsearch-DSC"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.15",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "configuration": {
                "url": "[concat(parameters('_artifactsLocation'), '/', 'dsc.zip')]",
                "script": "KnightFrank-Antares-Vm-Elasticsearch-DSCConfiguration.ps1",
                "function": "SetupElasticsearchVm"
              },
              "configurationArguments": {
                "CommonShareUrl": "[parameters('CommonShareUrl')]",
                "JavaVersion": "[parameters('JavaVersion')]",
                "JavaFileName": "[parameters('JavaFileName')]",
                "ElasticsearchVersion": "[parameters('ElasticsearchVersion')]",
                "ElasticsearchFileName": "[parameters('ElasticsearchFileName')]",
                "JdbcFileName": "[parameters('JdbcFileName')]",
                "JdbcVersion": "[parameters('JdbcVersion')]",
                "ElasticsearchIp": "[parameters('ElasticsearchIp')]",
                "ElasticsearchAdditionalConfigValues": "[parameters('ElasticsearchAdditionalConfigValues')]"
              }
            },
            "protectedSettings": {
              "configurationUrlSasToken": "[parameters('_artifactsLocationSasToken')]",
              "configurationArguments": {
                "OctopusThumbprint": "[parameters('OctopusThumbprint')]",
                "CommonShareCredential": {
                  "UserName": "[parameters('CommonShareUserName')]",
                  "Password": "[parameters('CommonShareKey')]"
                }
              }
            }
          }
        }
      ]
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('VmIISName'),'/joindomain')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', variables('VmIISName'))]",
        "[concat('Microsoft.Compute/virtualMachines/', variables('VmIISName'), '/extensions/KnightFrank-Antares-Vm-IIS-DSC')]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.0",
        "settings": {
          "Name": "[parameters('domainToJoin')]",
          "OUPath": "[parameters('ouPath')]",
          "User": "[concat(parameters('domainToJoin'), '\\', parameters('domainUsername'))]",
          "Restart": "true",
          "Options": "[parameters('domainJoinOptions')]"
        },
        "protectedsettings": {
          "Password": "[parameters('domainPassword')]"
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('VmElasticsearchName'),'/joindomain')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', variables('VmElasticsearchName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.0",
        "settings": {
          "Name": "[parameters('domainToJoin')]",
          "OUPath": "[parameters('ouPath')]",
          "User": "[concat(parameters('domainToJoin'), '\\', parameters('domainUsername'))]",
          "Restart": "true",
          "Options": "[parameters('domainJoinOptions')]"
        },
        "protectedsettings": {
          "Password": "[parameters('domainPassword')]"
        }
      }
    }
  ],
  "outputs": {
  }
}
